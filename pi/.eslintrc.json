{
    "env": {
        "es6": true,
        "node": true,
        "mocha":true,
		"browser":true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
		"ecmaVersion": 8
    },
    "rules": {
        "indent": [
            "error",
            4,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console":"off"
    }
}