<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="isel.pdm.yama">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".YamaApplication"
            android:allowBackup="true"
            android:icon="@drawable/icon_yama"
            android:label="@string/app_name"
            android:roundIcon="@drawable/icon_yama"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity"/>
        <activity android:name=".activity.UserDetailsActivity"/>
        <activity
                android:name=".activity.TeamsActivity"
                android:label="@string/title_activity_teams"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity
                android:name=".activity.MembersActivity"
                android:label="@string/title_activity_members"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activity.ChatActivity">
        </activity>
    </application>

</manifest>