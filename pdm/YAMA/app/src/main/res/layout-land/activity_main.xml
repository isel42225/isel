<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">


    <ImageView
            android:layout_width="235dp"
            android:layout_height="239dp" app:srcCompat="@drawable/icon_yama"
            android:id="@+id/Logo"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"/>
    <Button
            android:text="Sign in"
            android:layout_width="120dp"
            android:layout_height="63dp"
            android:id="@+id/button-login"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/Logo"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="80dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.549"/>
    <TextView
            android:text="YAMA"
            android:layout_width="71dp"
            android:layout_height="36dp"
            android:id="@+id/textView"
            android:textSize="24sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.636"
            app:layout_constraintStart_toStartOf="@+id/button-login"
            app:layout_constraintEnd_toEndOf="@+id/button-login" android:gravity="center"
            android:textColor="@color/design_default_color_on_secondary"/>
    <TextView
            android:text="Yet Another Messaging Aplication"
            android:layout_width="277dp"
            android:layout_height="31dp"
            android:id="@+id/textView2"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/Logo"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="48dp" app:layout_constraintBottom_toTopOf="@+id/button-login"
            app:layout_constraintHorizontal_bias="0.818" android:gravity="center"
            android:textColor="@color/design_default_color_on_secondary"/>
</androidx.constraintlayout.widget.ConstraintLayout>