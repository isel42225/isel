<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".activity.UserDetailsActivity">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="152dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/ic_launcher_background"
            android:contentDescription="Avatar Image"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextViewName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewName"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.524"/>
    <TextView
            android:text="TextViewEmail"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/textViewEmail"
            android:textSize="22sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.013"/>
    <TextView
            android:text="Followers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFollowers"
            android:textSize="22sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewLogin" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.432"/>
    <TextView
            android:text="TextViewLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLogin"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textViewName"
            app:layout_constraintHorizontal_bias="0.515"/>
    <Button
            android:id="@+id/logout"
            android:layout_width="167dp"
            android:layout_height="63dp"
            android:text="@string/logout"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmail" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.714"/>
    <Button
            android:text="@string/teams"
            android:layout_width="180dp"
            android:layout_height="67dp"
            android:id="@+id/buttonTeams"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmail"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/logout" app:layout_constraintHorizontal_bias="0.025"/>
</androidx.constraintlayout.widget.ConstraintLayout>