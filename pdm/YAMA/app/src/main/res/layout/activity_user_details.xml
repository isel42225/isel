<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".activity.UserDetailsActivity">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="152dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/ic_launcher_background"
            android:contentDescription="Avatar Image"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewName"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/buttonTeams"
            app:layout_constraintHorizontal_bias="0.31" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TextViewEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewEmail"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewLogin"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Followers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFollowers"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textViewEmail"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TextViewLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLogin"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.04"/>
    <Button
            android:text="@string/teams"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonTeams"
            android:textSize="18sp"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.448"/>

    <Button
            android:id="@+id/logout"
            android:layout_width="141dp"
            android:layout_height="74dp"
            android:layout_marginBottom="44dp"
            android:text="@string/logout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="24sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewFollowers"
            app:layout_constraintVertical_bias="0.675"/>
</androidx.constraintlayout.widget.ConstraintLayout>